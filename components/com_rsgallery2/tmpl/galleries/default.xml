<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<layout title="COM_RSGALLERY2_MENU_VIEW_GALLERIES_TITLE">
		<message>
			<![CDATA[COM_RSGALLERY2_MENU_VIEW_GALLERIES_DESC]]>
		</message>
	</layout>
	<!-- Add fields to the request variables for the layout. -->
	<fields name="request">
		<fieldset name="request"
			addfieldprefix="Rsgallery2\Component\Rsgallery2\Administrator\Field"
		>
		
			<field
				name="gid"
				type="MenuGalleriesList"
				label="COM_RSGALLERY2_MENU_SELECT_GALLERY_LABEL"
				description="COM_RSGALLERY2_MENU_SELECT_GALLERY_DESC"
				required="true"
				select="true"
				new="true"
				edit="true"
				clear="true"
			/>
			
			<!-- ToDo: layout numberof displayed galleries, row column ....  -->

			<field
					name="gallery_layout"
					type="componentlayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					class="custom-select"
					extension="com_rsgallery2"
					view="images"
					useglobal="true"
			/>

		
		<field name="galleries_intro_text"
			   type="editor"
			   label="COM_RSGALLERY2_GALLERIES_INTRODUCTION_TEXT"
			   description="COM_RSGALLERY2_GALLERIES_INTRODUCTION_DESC"
			   filter="JComponentHelper::filterText"
			   buttons="false"
		/>

		<field
				name="galleries_show_intro"
				type="list"
				default="0"
				label="*Show galleries intro"
				description="*Show title of gallery near thumb"
		>
			<option value="0">JNO</option>
			<option value="1">*Above galleries </option>
			<option value="2">*Right beside galleries </option>
			<option value="3">*Below galleries</option>
			<option value="4">*Left beside galleries</option>
		</field>

		</fieldset>		
				<field
				name="galleries_show_title"
				type="list"
				default="0"
				label="*Show gallery title"
				description="*Show title of gallery near thumb"
		>
			<option value="0">JNO</option>
			<option value="1">*Above thumb </option>
			<option value="2">*Below thumb</option>
			<option value="3">*Above description</option>
			<option value="4">*Below description</option>
		</field>
		
	</fields>
</metadata>


